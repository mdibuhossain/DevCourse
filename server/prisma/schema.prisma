generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum RoleType {
  ADMIN
  USER
}

model User {
  id        Int      @id @default(autoincrement())
  name      String?
  username  String   @unique
  password  String
  role      RoleType @default(USER)
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}
